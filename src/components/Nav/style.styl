nav
	width 100%
	display flex
	justify-content center
	align-items center
	height 55px
	background-color color-green-sea-500

	ul
		width content-width
		display flex
		justify-content flex-start
		align-items center
		height 100%

		li
			display flex
			justify-content center
			align-items center
			height 100%

			a
				padding 0 spacing-medium
				color color-white
				display flex
				justify-content flex-start
				align-items center
				height 100%
				
				&:hover
				&.active
					color color-white

				&.active
					background-color rgba(255,255,255,.1)